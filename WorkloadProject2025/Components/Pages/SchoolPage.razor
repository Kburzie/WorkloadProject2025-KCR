@page "/schoolpage"
@using WorkloadProject2025.Data.Models
@using WorkloadProject2025.Services
@inject SchoolService _schoolService;
@inject IDialogService DialogService

<SchoolForm OnSaved="Save"></SchoolForm>

<MudCard Class="mx-auto mt-6" Style="max-width: 850px;">
    <MudCardHeader>
        <MudText Typo="Typo.h5" Class="font-semibold">Current Schools</MudText>
        <MudSpacer />
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Style="text-transform: uppercase;">Add New School</MudButton>
    </MudCardHeader>

    <MudCardContent>
        <MudTable Items="@schools" Hover="true" Breakpoint="Breakpoint.Sm">
            <HeaderContent>
                <MudTh>School</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="School">@context.Name</MudTd>
                <MudTd DataLabel="">
                    <MudButton Variant="Variant.Filled" 
                               Color="Color.Error" 
                               Size="Size.Small"
                               OnClick="@(async () => await DeleteSchool(context.Id, context.Name))">
                        Delete
                    </MudButton>
                </MudTd>
            </RowTemplate>
        </MudTable>
    </MudCardContent>
</MudCard>

@code {
    //Make a list of Schools that we can load
    List<School> schools = new List<School>();
    //Fires when the page first loads
    protected override async Task OnInitializedAsync()
    {
        //Call our service, to fill our list
        schools = await _schoolService.GetAllAsync();
        //Let the GUI know state changed
        StateHasChanged();
    }

    public async Task Save()
    {
        //Refresh our list of schools
        schools = await _schoolService.GetAllAsync();
        StateHasChanged();
    }

    private async Task DeleteSchool(int id, string name)
    {
        bool? result = await DialogService.ShowMessageBox(
            "Confirm Delete",
            $"Are you sure you want to delete the school '{name}'? This action cannot be undone.",
            yesText: "Delete", cancelText: "Cancel");

        if (result == true)
        {
            try
            {
                await _schoolService.DeleteAsync(id);
                schools = await _schoolService.GetAllAsync();
                StateHasChanged();
            }
            catch (Exception ex)
            {
                await DialogService.ShowMessageBox("Error", $"Failed to delete school: {ex.Message}");
            }
        }
    }


}
