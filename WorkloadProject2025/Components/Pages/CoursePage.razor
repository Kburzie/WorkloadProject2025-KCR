@page "/coursepage"
@inject IDialogService DialogService
@inject ProgramOfStudyService programService
@inject CourseService courseService

<MudCard Class="mx-auto mt-6" Style="max-width: 800px;">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6" Class="font-semibold">Current Courses</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="OpenAddCourseDialog">Add New Course</MudButton>
        </CardHeaderActions>
    </MudCardHeader>

    <MudCardContent>
        <MudDataGrid Items="@courses">
            <Columns>
                <PropertyColumn Property="x => x.Name" Title="Course" />
                <PropertyColumn Property="x => x.Program.Name" Title="Program" />
                <TemplateColumn CellClass="d-flex justify-end">
                    <CellTemplate>
                        <MudStack Row>
                            <MudButton Size="@Size.Small" Variant="@Variant.Filled" Color="@Color.Secondary"
                                       OnClick="() => DeleteRecord(context.Item)">Delete</MudButton>
                        </MudStack>
                    </CellTemplate>
                </TemplateColumn>
            </Columns>
        </MudDataGrid>
    </MudCardContent>
</MudCard>

@code {
    List<ProgramOfStudy> programs = new();
    List<Course> courses = new();

    protected override async Task OnInitializedAsync()
    {
        programs = await programService.GetAllAsync();
        courses = await courseService.GetAllAsync();
    }

    private async Task OpenAddCourseDialog()
    {
        var parameters = new DialogParameters<CourseForm>
        {
            { x => x.Programs, programs }
        };

        var options = new DialogOptions
        {
            CloseOnEscapeKey = true,
            FullWidth = true,
            MaxWidth = MaxWidth.Small
        };
        var dialog = await DialogService.ShowAsync<CourseForm>("Add New Course", parameters, options);
        var result = await dialog.Result;

        if (result != null && !result.Canceled)
        {
            await ReloadData();
        }
    }

    private async Task<bool> DeleteRecord(Course course)
    {
        bool result = await courseService.DeleteAsync(course);
        await ReloadData();

        return result;
    }

    private async Task ReloadData()
    {
        courses = await courseService.GetAllAsync();
        StateHasChanged();
    }
}
