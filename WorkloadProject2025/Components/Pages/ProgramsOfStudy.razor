@page "/programsofstudy"
@using WorkloadProject2025.Data.Models
@using WorkloadProject2025.Services
@inject ProgramsOfStudyService _ProgramOfStudyService;
@inject DepartmentService _departmentService;
@inject IDialogService DialogService
<ProgramOfStudyForm department="DEPT" OnSaved="Save"></ProgramOfStudyForm>

<MudCard Class="mx-auto mt-6" Style="max-width: 850px;">
    <MudCardHeader>
        <MudText Typo="Typo.h5" Class="font-semibold">Current Programs</MudText>
        <MudSpacer />
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Style="text-transform: uppercase;">Add New Program</MudButton>
    </MudCardHeader>

    <MudCardContent>
        <MudTable Items="@POS" Hover="true" Breakpoint="Breakpoint.Sm">
            <HeaderContent>
                <MudTh>Program</MudTh>
                <MudTh>Department</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Program">@context.Name</MudTd>
                <MudTd DataLabel="Department">@context.Department?.Name</MudTd>
                <MudTd DataLabel="">
                    <MudButton Variant="Variant.Filled" 
                               Color="Color.Error" 
                               Size="Size.Small"
                               OnClick="@(async () => await DeleteProgram(context.Id, context.Name))">
                        Delete
                    </MudButton>
                </MudTd>
            </RowTemplate>
        </MudTable>
    </MudCardContent>
</MudCard>

@code {

    List<ProgramOfStudy> POS = new List<ProgramOfStudy>();
    List<Department> DEPT = new();
    //Fires when the page first loads
    protected override async Task OnInitializedAsync()
    {
        //Call our service, to fill our list
        POS = await _ProgramOfStudyService.GetAllAsync();
        DEPT = await _departmentService.GetAllAsync();
        //Let the GUI know state changed
    }

    public async Task Save()
    {
        //Refresh our list of schools
        POS = await _ProgramOfStudyService.GetAllAsync();
        StateHasChanged();
    }

    private async Task DeleteProgram(int id, string name)
    {
        bool? result = await DialogService.ShowMessageBox(
            "Confirm Delete",
            $"Are you sure you want to delete the program '{name}'? This action cannot be undone.",
            yesText: "Delete", cancelText: "Cancel");

        if (result == true)
        {
            try
            {
                await _ProgramOfStudyService.DeleteAsync(id);
                POS = await _ProgramOfStudyService.GetAllAsync();
                StateHasChanged();
            }
            catch (Exception ex)
            {
                await DialogService.ShowMessageBox("Error", $"Failed to delete program: {ex.Message}");
            }
        }
    }
}