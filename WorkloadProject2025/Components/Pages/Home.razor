@page "/"
@rendermode InteractiveServer

<PageTitle>Home - Workload Management System</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="mt-4">
    <!-- Header Section -->
    <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">
        <MudIcon Icon="@Icons.Material.Filled.Dashboard" Size="Size.Large" /> Workload Management Dashboard
    </MudText>
    <MudText Typo="Typo.subtitle1" Align="Align.Center" Class="mb-6" Color="Color.Secondary">
        Welcome to your comprehensive workload management system
    </MudText>

    <!-- Quick Access Features Section -->
    <MudText Typo="Typo.h5" GutterBottom="true" Class="mt-6 mb-4">
        <MudIcon Icon="@Icons.Material.Filled.Speed" Class="mr-2" /> Quick Access
    </MudText>
    <MudGrid Class="mb-6">
        <MudItem xs="12" sm="6" md="3">
            <MudCard Elevation="4" Class="pa-4" Style="cursor: pointer; height: 100%;" onclick="@(() => NavigateToNotifications())">
                <MudCardContent Class="text-center">
                    <MudIcon Icon="@Icons.Material.Filled.Notifications" Color="Color.Warning" Size="Size.Large" />
                    <MudText Typo="Typo.h6" Class="mt-2">Notifications</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">View system alerts</MudText>
                    <MudBadge Color="Color.Warning" Content="3" Overlap="true" Class="mt-2">
                        <MudText Typo="Typo.body2">New</MudText>
                    </MudBadge>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudCard Elevation="4" Class="pa-4" Style="cursor: pointer; height: 100%;" onclick="@(() => NavigateToAnalytics())">
                <MudCardContent Class="text-center">
                    <MudIcon Icon="@Icons.Material.Filled.Analytics" Color="Color.Info" Size="Size.Large" />
                    <MudText Typo="Typo.h6" Class="mt-2">Analytics</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">View insights & trends</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudCard Elevation="4" Class="pa-4" Style="cursor: pointer; height: 100%;" onclick="@(() => NavigateTo("/faculty-workload-dashboard"))">
                <MudCardContent Class="text-center">
                    <MudIcon Icon="@Icons.Material.Filled.AutoMode" Color="Color.Success" Size="Size.Large" />
                    <MudText Typo="Typo.h6" Class="mt-2">Auto Workload</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">Automated assignment</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudCard Elevation="4" Class="pa-4" Style="cursor: pointer; height: 100%;" onclick="@(() => NavigateTo("/program-dashboard"))">
                <MudCardContent Class="text-center">
                    <MudIcon Icon="@Icons.Material.Filled.Dashboard" Color="Color.Primary" Size="Size.Large" />
                    <MudText Typo="Typo.h6" Class="mt-2">Dashboard Summary</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">Overview & metrics</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>

    <!-- Main Navigation Section -->
    <MudText Typo="Typo.h5" GutterBottom="true" Class="mt-6 mb-4">
        <MudIcon Icon="@Icons.Material.Filled.Apps" Class="mr-2" /> Main Modules
    </MudText>
    <MudGrid>
        <!-- Dashboards -->
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudCard Elevation="3" Class="pa-4" Style="cursor: pointer; height: 100%;" onclick="@(() => NavigateTo("/program-dashboard"))">
                <MudCardContent Class="text-center">
                    <MudIcon Icon="@Icons.Material.Filled.Dashboard" Color="Color.Primary" Size="Size.Large" />
                    <MudText Typo="Typo.h6" Class="mt-2">Program Dashboard</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">View program analytics</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudCard Elevation="3" Class="pa-4" Style="cursor: pointer; height: 100%;" onclick="@(() => NavigateTo("/faculty-workload-dashboard"))">
                <MudCardContent Class="text-center">
                    <MudIcon Icon="@Icons.Material.Filled.Analytics" Color="Color.Secondary" Size="Size.Large" />
                    <MudText Typo="Typo.h6" Class="mt-2">Faculty Workload</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">Manage faculty workload</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <!-- Academic Structure -->
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudCard Elevation="3" Class="pa-4" Style="cursor: pointer; height: 100%;" onclick="@(() => NavigateTo("/schoolpage"))">
                <MudCardContent Class="text-center">
                    <MudIcon Icon="@Icons.Material.Filled.School" Color="Color.Tertiary" Size="Size.Large" />
                    <MudText Typo="Typo.h6" Class="mt-2">Schools</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">Manage schools</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudCard Elevation="3" Class="pa-4" Style="cursor: pointer; height: 100%;" onclick="@(() => NavigateTo("/departmentpage"))">
                <MudCardContent Class="text-center">
                    <MudIcon Icon="@Icons.Material.Filled.Assessment" Color="Color.Info" Size="Size.Large" />
                    <MudText Typo="Typo.h6" Class="mt-2">Departments</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">Manage departments</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudCard Elevation="3" Class="pa-4" Style="cursor: pointer; height: 100%;" onclick="@(() => NavigateTo("/programsofstudy"))">
                <MudCardContent Class="text-center">
                    <MudIcon Icon="@Icons.Material.Filled.PropaneTank" Color="Color.Success" Size="Size.Large" />
                    <MudText Typo="Typo.h6" Class="mt-2">Programs</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">Manage programs of study</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudCard Elevation="3" Class="pa-4" Style="cursor: pointer; height: 100%;" onclick="@(() => NavigateTo("/coursepage"))">
                <MudCardContent Class="text-center">
                    <MudIcon Icon="@Icons.Material.Filled.Book" Color="Color.Warning" Size="Size.Large" />
                    <MudText Typo="Typo.h6" Class="mt-2">Courses</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">Manage courses</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <!-- Faculty and Workload -->
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudCard Elevation="3" Class="pa-4" Style="cursor: pointer; height: 100%;" onclick="@(() => NavigateTo("/facultypage"))">
                <MudCardContent Class="text-center">
                    <MudIcon Icon="@Icons.Material.Filled.Person" Color="Color.Primary" Size="Size.Large" />
                    <MudText Typo="Typo.h6" Class="mt-2">Faculty</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">Manage faculty members</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudCard Elevation="3" Class="pa-4" Style="cursor: pointer; height: 100%;" onclick="@(() => NavigateTo("/workloadcategories"))">
                <MudCardContent Class="text-center">
                    <MudIcon Icon="@Icons.Material.Filled.List" Color="Color.Secondary" Size="Size.Large" />
                    <MudText Typo="Typo.h6" Class="mt-2">Workload Categories</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">Manage workload types</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <!-- Administrative -->
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudCard Elevation="3" Class="pa-4" Style="cursor: pointer; height: 100%;" onclick="@(() => NavigateTo("/termpage"))">
                <MudCardContent Class="text-center">
                    <MudIcon Icon="@Icons.Material.Filled.Badge" Color="Color.Tertiary" Size="Size.Large" />
                    <MudText Typo="Typo.h6" Class="mt-2">Terms</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">Manage academic terms</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>

    <!-- Dashboard Summary Section at Bottom -->
    <MudText Typo="Typo.h5" GutterBottom="true" Class="mt-8 mb-4">
        <MudIcon Icon="@Icons.Material.Filled.Summarize" Class="mr-2" /> Dashboard Summary
    </MudText>
    <MudGrid Class="mb-6">
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Elevation="4" Class="pa-4">
                <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                    <div>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Total Schools</MudText>
                        <MudText Typo="Typo.h4" Color="Color.Primary">12</MudText>
                    </div>
                    <MudIcon Icon="@Icons.Material.Filled.School" Color="Color.Primary" Size="Size.Large" />
                </MudStack>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Elevation="4" Class="pa-4">
                <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                    <div>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Active Faculty</MudText>
                        <MudText Typo="Typo.h4" Color="Color.Success">48</MudText>
                    </div>
                    <MudIcon Icon="@Icons.Material.Filled.Person" Color="Color.Success" Size="Size.Large" />
                </MudStack>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Elevation="4" Class="pa-4">
                <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                    <div>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Total Courses</MudText>
                        <MudText Typo="Typo.h4" Color="Color.Info">156</MudText>
                    </div>
                    <MudIcon Icon="@Icons.Material.Filled.Book" Color="Color.Info" Size="Size.Large" />
                </MudStack>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Elevation="4" Class="pa-4">
                <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                    <div>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Active Programs</MudText>
                        <MudText Typo="Typo.h4" Color="Color.Warning">24</MudText>
                    </div>
                    <MudIcon Icon="@Icons.Material.Filled.PropaneTank" Color="Color.Warning" Size="Size.Large" />
                </MudStack>
            </MudPaper>
        </MudItem>
    </MudGrid>

    <!-- Recent Activity Summary -->
    <MudGrid Class="mb-6">
        <MudItem xs="12" md="6">
            <MudPaper Elevation="4" Class="pa-4">
                <MudText Typo="Typo.h6" GutterBottom="true">
                    <MudIcon Icon="@Icons.Material.Filled.TrendingUp" Class="mr-2" /> System Overview
                </MudText>
                <MudSimpleTable Dense="true" Hover="true" Class="mt-3">
                    <thead>
                        <tr>
                            <th>Metric</th>
                            <th>Value</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Avg. Workload Hours</td>
                            <td>38.5 hrs</td>
                            <td><MudText Typo="Typo.body2" Color="Color.Success">Normal</MudText></td>
                        </tr>
                        <tr>
                            <td>Departments</td>
                            <td>18</td>
                            <td><MudText Typo="Typo.body2" Color="Color.Info">Active</MudText></td>
                        </tr>
                        <tr>
                            <td>Terms</td>
                            <td>4</td>
                            <td><MudText Typo="Typo.body2" Color="Color.Primary">Current</MudText></td>
                        </tr>
                    </tbody>
                </MudSimpleTable>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudPaper Elevation="4" Class="pa-4">
                <MudText Typo="Typo.h6" GutterBottom="true">
                    <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-2" /> Recent Updates
                </MudText>
                <MudStack Class="mt-3">
                    <MudStack Row="true" AlignItems="AlignItems.Center">
                        <MudIcon Icon="@Icons.Material.Filled.Add" Color="Color.Success" />
                        <MudText Typo="Typo.body2">New course added: Advanced Programming</MudText>
                    </MudStack>
                    <MudStack Row="true" AlignItems="AlignItems.Center">
                        <MudIcon Icon="@Icons.Material.Filled.Edit" Color="Color.Info" />
                        <MudText Typo="Typo.body2">Faculty workload updated for Spring 2025</MudText>
                    </MudStack>
                    <MudStack Row="true" AlignItems="AlignItems.Center">
                        <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Primary" />
                        <MudText Typo="Typo.body2">Program dashboard metrics refreshed</MudText>
                    </MudStack>
                </MudStack>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    [Inject] private NavigationManager NavigationManager { get; set; } = default!;

    private void NavigateTo(string url)
    {
        NavigationManager.NavigateTo(url);
    }

    private void NavigateToNotifications()
    {
        // Placeholder for notifications page - can be implemented later
        NavigationManager.NavigateTo("/");
    }

    private void NavigateToAnalytics()
    {
        // Placeholder for analytics page - can be implemented later
        NavigationManager.NavigateTo("/program-dashboard");
    }
}
