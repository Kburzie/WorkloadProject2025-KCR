@using System.ComponentModel.DataAnnotations
@using WorkloadProject2025.Data.Models
@inject ProgramsOfStudyService programService

<MudDialog>
    <DialogContent>
        <EditForm Model="program" OnValidSubmit="Save">
            <DataAnnotationsValidator />
            <MudStack Spacing="2">
                <MudStaticTextField For="@(() => program.Name)"
                                    @bind-Value="program.Name"
                                    Label="Program Name"
                                    Adornment="Adornment.Start"
                                    AdornmentIcon="@Icons.Material.Filled.Business" />

                <MudSelect T="int?"
                           Label="Department"
                           @bind-value="program.DepartmentId"
                           For="@(() => program.DepartmentId)"
                           Required="true"
                           Immediate="true"
                           Adornment="Adornment.Start"
                           AdornmentIcon="@Icons.Material.Filled.Assessment">
                    @* (int?) *@
                    <MudSelectItem T="int?" Value="@(null)">Select a Department</MudSelectItem>

                    @foreach (var dept in Departments)
                    {
                        <MudSelectItem T="int?" Value="@dept.Id">@dept.Name</MudSelectItem>
                    }
                </MudSelect>
                <ValidationMessage For="@(() => program.DepartmentId)" />
            </MudStack>
            <MudCardActions Class="d-flex justify-end mt-4">
                <MudButton Variant="Variant.Text" Color="Color.Secondary" OnClick="Cancel">Cancel</MudButton>
                <MudStaticButton Color="Color.Primary" Variant="Variant.Filled" FormAction="FormAction.Submit">Save</MudStaticButton>
            </MudCardActions>
        </EditForm>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] 
    IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter]
    public List<Department> Departments { get; set; } = new();

    [Parameter]
    public EventCallback OnSaved { get; set; }

    private ProgramOfStudy program { get; set; } = new ProgramOfStudy();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private async Task Save()
    {
        await programService.AddAsync(program);
        await OnSaved.InvokeAsync();
        program = new ProgramOfStudy(); // reset form
        MudDialog.Close(DialogResult.Ok(true));
        StateHasChanged();
    }
}
